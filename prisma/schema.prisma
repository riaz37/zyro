generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id   String @id @default(uuid())
  name String

  userId String

  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MessageRole {
  USER
  ASSISTANT
}

enum MessageType {
  RESULT
  ERROR
}

model Message {
  id      String      @id @default(uuid())
  content String
  role    MessageRole
  type    MessageType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Fragment Fragment?
  Project  Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  projectId String?
}

model Fragment {
  id        String @id @default(uuid())
  messageId String @unique

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  sandboxUrl String
  title      String
  files      Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AiProvider {
  GEMINI
  OPENAI
  ANTHROPIC
  GROK
}

model UserAiSettings {
  userId          String     @id
  defaultProvider AiProvider @default(GEMINI)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserAiProviderKey {
  id String @id @default(uuid())

  userId   String
  provider AiProvider

  iv         Bytes
  ciphertext Bytes
  authTag    Bytes
  last4      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, provider])
}
